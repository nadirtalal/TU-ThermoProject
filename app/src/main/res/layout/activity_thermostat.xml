<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="0dp"
    android:gravity="center_horizontal"
    android:background="@drawable/wallpaper02"
    android:paddingBottom="4dp" tools:context=".ThermostatActivity"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:baselineAligned="false">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/statusLed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"

            android:src="@drawable/green_status_led" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Home"
            android:textSize="48dp"
            android:textColor="#afafaf"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView2"
            android:paddingTop="0px"
            android:paddingLeft="110px"
            android:paddingRight="110px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2px"
            android:textSize="40dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="server time:"
            android:textColor="#afafaf" />

            <TextView
                android:id="@+id/serverTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:text="04:50"
                android:textSize="30sp"
                android:textColor="#afafaf" />
        </LinearLayout>

    </GridLayout>





    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/up"
        android:id="@+id/bPlus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="21.1&#x00B0;C"
        android:textSize="85dp"
        android:textColor="#afafaf"
        android:id="@+id/temp" />

    <ImageView
        android:id="@+id/bMinus"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/down" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal"
        android:max="250"
        android:thumbTint="#336699"
        android:progressTint="#336699"
        android:indeterminate="false" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/bCalendar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/calendar"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:id="@+id/bPlane"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/plane"
            android:layout_gravity="center_vertical" />


    </LinearLayout>



</LinearLayout>